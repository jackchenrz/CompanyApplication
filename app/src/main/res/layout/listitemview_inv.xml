<?xml version="1.0" encoding="utf-8"?>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />
        <TextView
            android:padding="2dp"
            android:id="@+id/tv_equipmentName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="资产名称"
            android:textColor="#000000"
            android:textSize="15sp" />
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_specification"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:text="型号"
            android:textColor="#000000"
            android:textSize="15sp"/>
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_equipmentCode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:text="资产编号"
            android:textColor="#000000"
            android:textSize="15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_initialValue"
            android:layout_width="0dp"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="资产原值" />
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_outFactoryNum"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:text="出厂编号"
            android:textColor="#000000"
            android:textSize="15sp" />
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_isSecret"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="保密等级" />
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_equipmentPosition"
            android:layout_width="0dp"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="物理位置" />
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_departmentName"
            android:layout_width="0dp"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="使用部门" />
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_managePerson"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="责任人" />
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_usePerson"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="使用人" />
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />
    <TextView
        android:id="@+id/tv_projectName"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="15sp"
        android:text="资产属性" />
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />
</LinearLayout>
</LinearLayout>